<div class="request-confirmation-container">
    <div class="requests-list">        

        <div class="request-header">
            <h1>Mentoring Requests</h1>
        </div>

        <% @requests.each do |request| %>
            <div class="request">
                <h1 style="text-transform: capitalize">
                    <%= link_to request.user.full_name, user_path(request.user) %>
                </h1>
                <p>is looking to aquire skill in <b><%= request.skill %></b></p>
            </div>
        <% end %>
    </div>

    <a href="/users">
        <div class="return-user-link">
            <button type="button">Return</button>
        </div>
    </a>

</div>
